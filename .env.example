# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=#competitive-intelligence

# Notion Integration (Optional)
NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Database Configuration (Optional - for data persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/competitor_monitor

# Email Configuration (Optional - for email reports)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
